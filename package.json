  "bugs": {
    "url": "https://github.com/topher6345/cubeBoxJS/issues"
  },
  "homepage": "https://github.com/topher6345/cubeBoxJS#readme",
  "devDependencies": {
    "gh-pages": "^2.2.0",
    "serialize-javascript": ">=2.1.1",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "express": "^4.17.1",
    "madge": "^3.4.4",
    "webpack-dev-server": "^3.11.0"
  },
  "engines": {
    "node": "8.16.1"
